<body>
<nav class="navbar navbar-expand-sm bg-dark navbar-dark">
</nav>
<hr>
<form class="form-group" action="/get-balance" style="text-align: center" method=post>
    <div class="container col-lg-4 border" style="border-radius: 20px">
        <h2 class="text-center">CHECK_BALANCE</h2>
        <p class="text-center">Please enter data in this form</p>
        <hr>

        <div class="form-group">
            <label for="wallet"></label>
            <input type="text" class="form-control" placeholder="Enter wallet address" name="wallet" id="wallet"
                   required>
        </div>

        <div class="form-group">
            <label for="token"></label>
            <input type="token" class="form-control" placeholder="Enter token" name="token" id="token" required>
        </div>
        <hr>
        <button type="submit" class="btn btn-lg btn-primary btn-block">Receive balance</button>

        <div class="container singin">
        </div>
    </div>
    <h2>{{balance}}</h2>
</form>
</body>
